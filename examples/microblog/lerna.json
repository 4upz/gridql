{
  "useWorkspaces": true,
  "version": "3.0.0",
  "packages": [
    "packages/"
  ],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.md",
        "**/*.spec.ts"
      ],
      "message": "chore(release): publish"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
