{
  "title": "ServerConfig",
  "type": "object",
  "$id": "serverConfig.schema.json",
  "properties": {
    "port": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "graphlettes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "mongo": {
            "type": "object",
            "$ref": "mongoConfig.schema.json"
          },
          "schema": {
            "type": "string"
          },
          "dtoConfig": {
            "type": "object",
            "$ref": "dtoconfig.schema.json"
          }
        },
        "required": [
          "path",
          "mongo",
          "schema",
          "dtoConfig"
        ]
      }
    }
  },
  "additionalProperties": false,
    "required": [
        "port",
        "graphlettes"
    ]
}
